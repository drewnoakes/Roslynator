<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.0</TargetFramework>
  </PropertyGroup>

  <PropertyGroup>
    <AssemblyName>Roslynator.Documentation.Generator</AssemblyName>
    <RootNamespace>Roslynator.Documentation</RootNamespace>
    <CodeAnalysisRuleSet>..\global.ruleset</CodeAnalysisRuleSet>
    <LangVersion>latest</LangVersion>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>Documentation.Generator.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <Target Name="RoslynatorDocumentation" AfterTargets="RoslynatorDocumentationInitialize" Condition=" '$(Configuration)' == 'Release'">

    <PropertyGroup>
      <RoslynatorDocumentationAssemblies>Roslynator.CSharp.dll Roslynator.CSharp.Workspaces.dll Roslynator.Documentation.dll</RoslynatorDocumentationAssemblies>
    </PropertyGroup>

    <Exec Command="$(RoslynatorDocumentationExe) doc ^&#xD;&#xA;-a $(RoslynatorDocumentationAssemblies) ^&#xD;&#xA;-r &quot;$(RoslynatorDocumentationAssemblyReferencesPath)&quot; ^&#xD;&#xA;-o &quot;$(SolutionDir)..\docs\api&quot; ^&#xD;&#xA;-h &quot;Roslynator API Reference&quot;" LogStandardErrorAsError="true" ConsoleToMSBuild="true">
      <Output TaskParameter="ConsoleOutput" PropertyName="OutputOfExec" />
    </Exec>

    <Exec Command="$(RoslynatorDocumentationExe) declarations ^&#xD;&#xA;-a $(RoslynatorDocumentationAssemblies) ^&#xD;&#xA;-r &quot;$(RoslynatorDocumentationAssemblyReferencesPath)&quot; ^&#xD;&#xA;-o &quot;$(SolutionDir)..\docs\api.cs&quot;" LogStandardErrorAsError="true" ConsoleToMSBuild="true">
      <Output TaskParameter="ConsoleOutput" PropertyName="OutputOfExec" />
    </Exec>

    <Exec Command="$(RoslynatorDocumentationExe) root ^&#xD;&#xA;-a Roslynator.Documentation.dll ^&#xD;&#xA;-r &quot;$(RoslynatorDocumentationAssemblyReferencesPath)&quot; ^&#xD;&#xA;-o &quot;$(SolutionDir)Documentation\README.md&quot; ^&#xD;&#xA;-h &quot;Roslynator.Documentation&quot; ^&#xD;&#xA;--root-url &quot;../../docs/api/&quot;" LogStandardErrorAsError="true" ConsoleToMSBuild="true">
      <Output TaskParameter="ConsoleOutput" PropertyName="OutputOfExec" />
    </Exec>

    <Exec Command="$(RoslynatorDocumentationExe) root ^&#xD;&#xA;-a Roslynator.CSharp.dll ^&#xD;&#xA;-r &quot;$(RoslynatorDocumentationAssemblyReferencesPath)&quot; ^&#xD;&#xA;-o &quot;$(SolutionDir)CSharp\README.md&quot; ^&#xD;&#xA;-h &quot;Roslynator.CSharp&quot; ^&#xD;&#xA;--root-url &quot;../../docs/api/&quot;" LogStandardErrorAsError="true" ConsoleToMSBuild="true">
      <Output TaskParameter="ConsoleOutput" PropertyName="OutputOfExec" />
    </Exec>

    <Exec Command="$(RoslynatorDocumentationExe) root ^&#xD;&#xA;-a Roslynator.CSharp.Workspaces.dll ^&#xD;&#xA;-r &quot;$(RoslynatorDocumentationAssemblyReferencesPath)&quot; ^&#xD;&#xA;-o &quot;$(SolutionDir)CSharp.Workspaces\README.md&quot; ^&#xD;&#xA;-h &quot;Roslynator.CSharp.Workspaces&quot; ^&#xD;&#xA;--root-url &quot;../../docs/api/&quot;" LogStandardErrorAsError="true" ConsoleToMSBuild="true">
      <Output TaskParameter="ConsoleOutput" PropertyName="OutputOfExec" />
    </Exec>

    <PropertyGroup>
      <RoslynatorDocumentationAssemblies>Roslynator.Documentation.TestProject</RoslynatorDocumentationAssemblies>
    </PropertyGroup>

    <Exec Command="$(RoslynatorDocumentationExe) doc ^&#xD;&#xA;-a $(RoslynatorDocumentationAssemblies) ^&#xD;&#xA;-r &quot;$(RoslynatorDocumentationAssemblyReferencesPath)&quot; ^&#xD;&#xA;-o &quot;$(SolutionDir)..\docs\apitest&quot; ^&#xD;&#xA;-h &quot;Foo API Reference&quot; ^&#xD;&#xA;--additional-xml-documentation &quot;$(ProjectDir)test.xml&quot; ^&#xD;&#xA;--ignored-names &quot;Roslynator.Documentation.Test2&quot;" LogStandardErrorAsError="true" ConsoleToMSBuild="true">
      <Output TaskParameter="ConsoleOutput" PropertyName="OutputOfExec" />
    </Exec>

    <Exec Command="$(RoslynatorDocumentationExe) declarations ^&#xD;&#xA;-a $(RoslynatorDocumentationAssemblies) ^&#xD;&#xA;-r &quot;$(RoslynatorDocumentationAssemblyReferencesPath)&quot; ^&#xD;&#xA;-o &quot;$(SolutionDir)..\docs\apitest.cs&quot; ^&#xD;&#xA;--ignored-names &quot;Roslynator.Documentation.Test2&quot;" LogStandardErrorAsError="true" ConsoleToMSBuild="true">
      <Output TaskParameter="ConsoleOutput" PropertyName="OutputOfExec" />
    </Exec>

  </Target>

  <ItemGroup>
    <None Remove="Documentation.Generator.snk" />
    <None Remove="test.xml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Roslynator.Documentation.Build" Version="0.1.0-beta" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Workspaces" Version="2.8.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\CSharp\CSharp.csproj" />
    <ProjectReference Include="..\CSharp.Workspaces\CSharp.Workspaces.csproj" />
    <ProjectReference Include="..\Documentation.TestProject\Documentation.TestProject.csproj" />
    <ProjectReference Include="..\Documentation\Documentation.csproj" />
    <ProjectReference Include="..\Tools\Utilities\Utilities.csproj" />
  </ItemGroup>

</Project>
